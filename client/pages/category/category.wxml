
<view class="type-select">
  <view class="btn">商品</view>
  <view class="btn">店铺</view>
</view>



<view wx:if="{{activeType === '商品'}}">
</view>




<view wx:if="{{!items}}">
  <view class="offline-notice">正在加载中，请稍等...</view>
</view>

<view wx:elif="{{items.length === 0}}">
  <view class="offline-notice">没有商品</view>
</view>

<view wx:elif="{{items.length > 0}}">
  <scroll-view scroll-y="true" height="100%">
    <view id="panel" class="flex-column">
      <block wx:for="{{items}}" wx:for-item="item" wx:key="id">
        <view class="flex-cell flex-row" bindtap="bindTapProduct" data-id="{{item.id}}">
            <view class="flex-cell flex-row">{{item.symbol}}</view>
            <view class="flex-cell flex-row">{{item.price}}</view>
            <view class="flex-cell flex-row">{{item.type}}</view>
            <view class="flex-cell flex-row">{{item.time}}</view>
        </view>
      </block>
    </view>
  </scroll-view>
</view>
